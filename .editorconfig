# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 88
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.py]
max_line_length = 88

[*.{js,jsx,ts,tsx,htm,html,less,scss,css,json,json5,vue}]
indent_size = 2

# [*.json]
# insert_final_newline = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[Makefile]
indent_style = tab
# indent_size = 8

[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.{sh,zsh}]
indent_size = 2

# [{Gemfile,Rakefile,Guardfile,Procfile}]

[*.java]
indent_size = 4
max_line_length = 120

[*.go]
indent_style = tab

[*.{c,h}]
indent_size = 2
